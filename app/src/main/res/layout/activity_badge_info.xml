<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_badge_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.sjsu.cmpe.partyon.activities.BadgeInfoActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/badge_info_toolbar"
        android:layout_width="match_parent"
        style="@style/ActionBarStyle"
        app:title="Wallet"
        app:titleTextColor="@color/font_white_color"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="40dp"
        android:text="Current Points:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/points_view"
        android:text="200"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_margin="60dp"
        style="@style/PurpleTheme.border_box"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/level_1_icon"
                android:background="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:text="Level 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/form_divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/level_2_icon"
                android:background="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#9e9e9e"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="Level 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/form_divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/level_3_icon"
                android:background="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#70e774"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="Level 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/form_divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/level_4_icon"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="#526eed"/>
            <TextView
                android:text="Level 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/form_divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/level_5_icon"
                android:background="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#f43c3c"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="Level 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
